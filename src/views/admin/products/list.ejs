<head>
    <%- include('../../partials/_header.ejs') %>
</head>

<link rel="preconnect" href="https://rsms.me/" />
<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
<style>
    :root {
        font-family: 'Inter', sans-serif;
    }
    @supports (font-variation-settings: normal) {
        :root {
            font-family: 'Inter var', sans-serif;
        }
    }
</style>

<div class="antialiased bg-black w-full min-h-screen text-slate-300 relative py-4">
    <div class="grid grid-cols-12 gap-2 sm:gap-4 md:gap-6 lg:gap-8 xl:gap-8 max-w-8xl mr-4 my-2 px-2">
        <%- include('../partials/sidebar') %>

        <div id="content" class="bg-white/10 col-span-9 rounded-lg p-6">
            <div class="px-4 sm:px-6 lg:px-8">
                <div class="sm:flex sm:items-center">
                    <div class="sm:flex-auto">
                        <h1 class="text-base font-semibold leading-6 text-white">Products</h1>
                        <p class="mt-2 text-sm text-gray-300">A list of all the products in your shop.</p>
                    </div>
                    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
                        <button
                            type="button"
                            class="block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
                        >
                            Add product
                        </button>
                    </div>
                </div>
                <div class="mt-8 flow-root">
                    <div class="-mx-4 -my-2 sm:-mx-6 lg:-mx-8">
                        <div class="inline-block min-w-full py-2 align-middle">
                            <table class="min-w-full border-separate border-spacing-0">
                                <thead>
                                    <tr>
                                        <th
                                            scope="col"
                                            class="sticky top-0 z-10 border-b border-gray-700 py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-white backdrop-blur backdrop-filter sm:pl-6 lg:pl-8"
                                        >
                                            ID
                                        </th>
                                        <th
                                            scope="col"
                                            class="sticky top-0 z-10 hidden border-b border-gray-700 px-3 py-3.5 text-left text-sm font-semibold text-white backdrop-blur backdrop-filter sm:table-cell"
                                        >
                                            Name
                                        </th>
                                        <th
                                            scope="col"
                                            class="sticky top-0 z-10 hidden border-b border-gray-700 px-3 py-3.5 text-left text-sm font-semibold text-white backdrop-blur backdrop-filter lg:table-cell"
                                        >
                                            Price
                                        </th>
                                        <th
                                            scope="col"
                                            class="sticky top-0 z-10 border-b border-gray-700 py-3.5 pl-3 pr-4 backdrop-blur backdrop-filter sm:pr-6 lg:pr-8"
                                        >
                                            <span class="sr-only">Edit</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td
                                            class="whitespace-nowrap border-b border-gray-700 py-4 pl-4 pr-3 text-sm font-medium text-gray-100 sm:pl-6 lg:pl-8"
                                        >
                                            <code>1</code>
                                        </td>
                                        <td
                                            class="whitespace-nowrap border-b border-gray-700 hidden px-3 py-4 text-sm text-gray-400 sm:table-cell"
                                        >
                                            Cool
                                        </td>
                                        <td
                                            class="whitespace-nowrap border-b border-gray-700 px-3 py-4 text-sm text-gray-400"
                                        >
                                            $5
                                        </td>
                                        <td
                                            class="relative whitespace-nowrap border-b border-gray-700 py-4 pr-4 pl-3 text-right text-sm font-medium sm:pr-8 lg:pr-8"
                                        >
                                            <a href="#" class="text-indigo-400 hover:text-indigo-200"
                                                >Edit<span class="sr-only">, Lindsay Walton</span></a
                                            >
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
